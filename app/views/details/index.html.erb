<div class="col-sm-12">
  <table class="table">
    <thead>
      <tr class="bg-gray hidden-xs">
        <th>Day</th>
        <th>Detail</th>
        <th>Pay by</th>
        <th>Amount (THB)</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "day_list", collection: @paid_for_month, as: :expense %>
      <tr class="add-border-top">
        <td colspan="1"><b>Total</b></td>
        <td colspan="3"><b><%= @total %> THB</b></td>
      </tr>
      <tr>
        <td colspan="1"><b>Average</b></td>
        <td colspan="3"><b><%= @average %> THB</b></td>
      </tr>
    </tbody>
  </table>
</div>