<%= render partial: "shared/search_box" %>

<div class="col-sm-12">
  <br>
  <div>
    <div><h4><%= t('paid_for') %><%= @year %></h4></div>
    <table class="table table-striped">
      <thead>
        <tr class="bg-light-green">
          <th><%= t('month') %></th>
          <th><%= t('total_amount') %></th>
          <th><%= t('actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @months.each do |month, amount| %>
          <%= render partial: "month_list", locals: { date: month.to_date, amount: amount } %>
        <% end %>
        <tr class="add-border-top">
          <td><b><%= t('summary') %></b></td>
          <td colspan="2"><b><%= @total_amount %></b></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>