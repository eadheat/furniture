<%= render partial: "shared/search_box" %>

<div class="col-sm-12">
  <br>
  <div>
    <div><h4>Paid for <%= @year %></h4></div>
    <table class="table">
      <thead>
        <tr class="bg-gray">
          <th>Month</th>
          <th>Total Amount (THB)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @months.each do |month, amount| %>
          <%= render partial: "month_list", locals: { date: month.to_date, amount: amount } %>
        <% end %>
        <tr class="add-border-top">
          <td><b>Summary</b></td>
          <td colspan="2"><b><%= @total_amount %></b></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>