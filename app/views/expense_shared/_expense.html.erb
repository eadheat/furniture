<table id="pay-list" class="table table-striped">
  <thead>
    <tr class="hidden-xs">
      <th><%= t('date') %></th>
      <th><%= t('detail') %></th>
      <th><%= t('price') %></th>
      <th class="menu-actions" colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr id="expense-form">
      <td>
        <input 
          class="pay-date form-control required" 
          type="text" 
          value="<%= Time.current.strftime('%d.%m.%Y') %>" 
          name="expense_date"
          placeholder="<%= t('date') %>" />
      </td>
      <td>
        <%= 
          text_field_tag "expense_detail", nil, 
          placeholder: t('detail'), 
          class: "form-control required expense-detail-autocomplete" 
        %>
      </td>
      <td>
        <%= 
          text_field_tag "expense_amount", nil, 
          placeholder: t('amount'),
          class: "form-control required" 
        %>
      </td>
      <td id="insert-expense-action">
        <%= button_tag t('add_new'), id: "insert-expense", class: "btn btn-primary" %>
      </td>
    </tr>
    <%= render partial: "/expense_shared/expense_list", collection: @expenses, as: :expense %>
  </tbody>
</table>