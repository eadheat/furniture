<div>
  <form role="search">
    <div class="col-sm-3">
      <label class="col-sm-12">Month</label>
      <%= select_tag "month", options_for_select(months), prompt: "Select", class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <label class="col-sm-12">Year</label>
      <%= select_tag "year", options_for_select(@expese_year_list), prompt: "Select", class: "form-control" %>
    </div>
    <div class="col-sm-6">
      <label class="col-sm-12">&nbsp;</label>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </form>
</div>
<br>
<div class="clearfix">
  <div class="col-sm-12"><h4><%= @average %></h4></div>

  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr class="bg-gray">
          <th>Average for</th>
          <th>Amonth (THB)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Per day</td>
          <td><%= average_expense_per_day_for_all %></td>
        </tr>
        <tr>
          <td>Per month</td>
          <td><%= average_expense_per_month_for_all %></td>
        </tr>
        <tr>
          <td>Paid at most</td>
          <td><%= average_expense_per_month_for_all %></td>
        </tr>
        <tr>
          <td>Paid at least</td>
          <td><%= average_expense_per_month_for_all %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>