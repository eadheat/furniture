<div id='calendar'></div>

<!-- Modal -->
<div class="modal fade" id="click-dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <%= form_tag("#", id: "event-form") do %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="modal-event-title"></h4>
        </div>

        <div class="modal-body">        
          <div class="clearfix">
            <div class="row form-group">
              <div id="event-status" class="error col-xs-12"></div>
            </div>
          </div>
          <div class="form-group clearfix">
            <div>
              <%= hidden_field_tag "eid", nil, id: "event-id" %>

              <div class="row form-group">
                <div class="col-xs-6 col-sm-2"><b>From: </b></div>
                <div class="col-xs-6 col-sm-10 green" id="start-event-date">
                  <%= Time.now.localtime.to_date.strftime("%d/%m/%Y") %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-xs-6 col-sm-2"><b>To: </b></div>
                <div class="col-xs-6 col-sm-10">
                  <%= 
                    text_field_tag "end_date", 
                    nil, 
                    id: "end-event-date", 
                    class: "form-control datepicker" 
                  %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-xs-6 col-sm-2"><b>Description: </b></div>
                <div class="col-xs-6 col-sm-10">
                  <%= 
                    text_area_tag "description", 
                    nil,
                    id: "description_id", 
                    class: "form-control"
                  %>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="submit-event-btn-id" type="button" class="btn btn-primary">Save changes</button>
          <button id="delete-event-btn-id" type="button" class="btn btn-danger">Delete</button>
        </div>
      </div>
    <% end %>
  </div>
</div>