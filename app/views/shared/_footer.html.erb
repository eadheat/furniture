<footer>
  <div class="container">
    <div class="row">
      Copyright &copy; <%= Time.now.year %>
    </div>
    <div class="row">
      <div id="contactus" data-toggle="modal" data-target="#myContactModal"><%= t('contact_us') %></div>
    </div>
  </div>
</footer>

<!-- Modal -->
<div class="modal fade" id="myContactModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <%= form_tag "#", id: "contact-us-form" do %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('contact_us') %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= text_field_tag "name", nil, placeholder: t('name'), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag "contact", nil, placeholder: t('email_or_phone'), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= text_area_tag "message", nil, placeholder: t("message"), class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="submit-contact-btn" class="btn btn-primary">
          <%= t('send') %>
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t('close') %>
        </button>
      </div>
    </div>
    <% end %>
  </div>
</div>